@model SlikaOglasi.Models.Oglasi
@using Microsoft.AspNetCore.Localization
@using Microsoft.Extensions.Localization
@using Microsoft.Extensions.DependencyInjection
@inject IStringLocalizer<Resource> localazer
@{
    ViewData["Title"] = localazer["Detalji"];
}

<h1>@localazer["Detalji"]</h1>

<div>
    <h4>@localazer["Oglasi"]</h4>
    <hr />
    <dl class="row col-md-9">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Naslov)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Naslov)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Marka)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Marka)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Model)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Model)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Godiste)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Godiste)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Motor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Motor)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Snaga_Ks)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Snaga_Ks)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Gorivo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Gorivo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Karoserija)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Karoserija)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Opis)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Opis)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cena)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cena)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.OglasiId" name="Izmeni">@localazer["Izmeni"]</a> |
    <a asp-action="Delete" asp-route-id="@Model.OglasiId" name="Obrisi">@localazer["Obrisi"]</a> |
    <a asp-action="Index">@localazer["Nazad"]</a>
</div>

