@model SlikaOglasi.Models.Oglasi
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Localization
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<Resource> localazer

@{
    ViewData["Title"] =localazer["Unesi oglas"];
}



<h1>@localazer["Novi unos"]</h1>

<h4>@localazer["Oglasi"]</h4>

<div class="row">
  
    <div class="col-md-3">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Naslov" class="control-label"></label>
                <input asp-for="Naslov" class="form-control" />
                <span asp-validation-for="Naslov" class="text-danger"></span>
            </div>

            <div class="form-group">
                <img src="" id="img1" width="200" height="150" />
            </div>
            <div class="form-group">
                <label asp-for="Url" class="control-label"></label>
                <input asp-for="Url" class="form-control" />
                <span asp-validation-for="Url" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Marka" class="control-label"></label>
                <input asp-for="Marka" class="form-control" />
                <span asp-validation-for="Marka" class="text-danger"></span>

            </div>

            <div class="form-group">
                <label asp-for="Model" class="control-label"></label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Godiste" class="control-label"></label>
                <input asp-for="Godiste" class="form-control" />
                <span asp-validation-for="Godiste" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Motor" class="control-label"></label>
                <input asp-for="Motor" class="form-control" />
                <span asp-validation-for="Motor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Snaga_Ks" class="control-label"></label>
                <input asp-for="Snaga_Ks" class="form-control" />
                <span asp-validation-for="Snaga_Ks" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="Gorivo" class="control-label"></label>
                <input asp-for="Gorivo" class="form-control" />
                <span asp-validation-for="Gorivo" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="Karoserija" class="control-label"></label>
                <input asp-for="Karoserija" class="form-control" />
                <span asp-validation-for="Karoserija" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="Opis" class="control-label"></label>
                <textarea asp-for="Opis" class="form-control"></textarea>
                <span asp-validation-for="Opis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cena" class="control-label"></label>
                <input asp-for="Cena" class="form-control" />
                <span asp-validation-for="Cena" class="text-danger"></span>
            </div>
            <<div class="form-group">
                <input type="submit" value=@localazer["Sacuvaj"] class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@localazer["Nazad"]</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        function PrikaziSliku() {
            var File1 = document.getElementById("File1");
            var img1 = document.getElementById("img1");
            var fajlSlike = File1.files[0];
            if (fajlSlike != null > 0 && fajlSlike.type.match(/image.*/)) {
                var reader = new FileReader();
                reader.readAsDataURL(fajlSlike);
                reader.onload = function () {
                    img1.src = reader.result;
                };
            }
            else {
                img1.setAttribute("src", "");
            }
        }
        function Validacija() {
            var src = $("#img1").attr("src");
            if (src == "") {
                $("#p1").html("Odaberite sliku");
                return false;
            }
            else {
                return true;
            }

        }
    </script>
}
